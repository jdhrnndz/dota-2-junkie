<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:gravity="center">
    <com.android.volley.toolbox.NetworkImageView
        android:id="@+id/user_avatar"
        android:layout_width="100dip"
        android:layout_height="100dip"
        android:background="@color/primary"
        android:padding="6dp"
        android:layout_marginTop="32dip"
        android:layout_marginBottom="16dip"
        android:layout_centerHorizontal="true"
        android:layout_alignParentTop="true" />
    <ProgressBar
        android:id="@+id/user_avatar_progress_bar"
        android:layout_width="100dip"
        android:layout_height="100dip"
        android:layout_marginTop="32dip"
        android:layout_centerHorizontal="true"
        android:layout_alignParentTop="true"/>
    <TextView
        android:id="@+id/user_persona_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textStyle="bold"
        android:textSize="32sp"
        android:layout_below="@id/user_avatar"
        android:layout_centerHorizontal="true"/>
    <TextView
        android:id="@+id/user_real_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/user_persona_name"
        android:layout_centerHorizontal="true"/>
    <TextView
        android:id="@+id/user_country"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/user_real_name"
        android:layout_centerHorizontal="true"/>
    <GridLayout
        android:id="@+id/user_info"
        android:layout_centerHorizontal="true"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/user_country"
        android:columnCount="3"
        android:rowCount="3"
        android:orientation="horizontal"
        android:layout_marginTop="32dp">
        <android.support.v7.widget.AppCompatButton
            android:id="@+id/sigil_member_since"
            android:layout_width="56dp"
            android:layout_height="56dp"
            android:layout_gravity="center"
            android:layout_column="0"
            android:layout_row="0"
            android:layout_marginBottom="8dp"
            android:text="@string/calendar"
            android:textSize="24dp"
            android:textColor="@color/primary"
            android:background="@drawable/icon_ring_border_red" />
        <android.support.v7.widget.AppCompatButton
            android:id="@+id/sigil_steam_id"
            android:layout_width="56dp"
            android:layout_height="56dp"
            android:layout_gravity="center"
            android:layout_column="1"
            android:layout_row="0"
            android:layout_marginBottom="8dp"
            android:text="@string/user"
            android:textSize="24dp"
            android:textColor="@color/primary"
            android:background="@drawable/icon_ring_border_red" />
        <android.support.v7.widget.AppCompatButton
            android:id="@+id/sigil_last_log_off"
            android:layout_width="56dp"
            android:layout_height="56dp"
            android:layout_gravity="center"
            android:layout_column="2"
            android:layout_row="0"
            android:layout_marginBottom="8dp"
            android:text="@string/sign_out"
            android:textSize="24dp"
            android:textColor="@color/primary"
            android:background="@drawable/icon_ring_border_red" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Member Since"
            android:layout_gravity="center"
            android:layout_column="0"
            android:layout_row="1"/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Steam ID 32"
            android:layout_gravity="center"
            android:layout_column="1"
            android:layout_row="1"/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Last Log Off"
            android:layout_gravity="center"
            android:layout_column="2"
            android:layout_row="1"/>
        <TextView
            android:id="@+id/user_member_since"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="MAR 23, 2012"
            android:textSize="16dp"
            android:layout_gravity="center"
            android:layout_column="0"
            android:layout_row="2"
            android:layout_marginLeft="8dp"
            android:layout_marginRight="8dp"/>
        <TextView
            android:id="@+id/user_steam_id"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="100531310"
            android:textSize="16dp"
            android:layout_gravity="center"
            android:layout_column="1"
            android:layout_row="2"
            android:layout_marginLeft="8dp"
            android:layout_marginRight="8dp"/>
        <TextView
            android:id="@+id/user_last_log_off"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="JUL 19, 2016"
            android:textSize="16dp"
            android:layout_gravity="center"
            android:layout_column="2"
            android:layout_row="2"
            android:layout_marginLeft="8dp"
            android:layout_marginRight="8dp"/>
    </GridLayout>

    <com.github.mikephil.charting.charts.LineChart
        android:id="@+id/matches_chart"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/user_info"
        android:layout_marginTop="16dp"
        android:layout_alignParentBottom="true"/>
</RelativeLayout>