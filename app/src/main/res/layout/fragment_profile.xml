<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:gravity="center">
    <ImageView
        android:id="@+id/user_avatar"
        android:layout_width="100dip"
        android:layout_height="100dip"
        android:background="@color/colorPrimary"
        android:layout_marginTop="32dip"
        android:layout_marginBottom="16dip"
        android:layout_centerHorizontal="true"
        android:layout_alignParentTop="true"/>
    <TextView
        android:id="@+id/user_persona_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Inu Sange"
        android:textStyle="bold"
        android:textSize="32sp"
        android:layout_below="@id/user_avatar"
        android:layout_centerHorizontal="true"/>
    <TextView
        android:id="@+id/user_real_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="John Denielle Hernandez"
        android:layout_below="@id/user_persona_name"
        android:layout_centerHorizontal="true"/>
    <TextView
        android:id="@+id/user_country"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Philippines"
        android:layout_below="@id/user_real_name"
        android:layout_centerHorizontal="true"/>
    <GridLayout
        android:layout_centerHorizontal="true"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/user_country"
        android:columnCount="3"
        android:rowCount="3"
        android:orientation="horizontal"
        android:paddingLeft="28dp"
        android:paddingRight="28dp"
        android:layout_marginTop="32dp">
        <ImageView
            android:layout_width="64dp"
            android:layout_height="64dp"
            android:background="@drawable/icon_member_since"
            android:layout_gravity="center"
            android:layout_column="0"
            android:layout_row="0"
            android:layout_marginBottom="8dp" />
        <ImageView
            android:layout_width="64dp"
            android:layout_height="64dp"
            android:background="@drawable/icon_steam_id"
            android:layout_gravity="center"
            android:layout_column="1"
            android:layout_row="0"
            android:layout_marginBottom="8dp"/>
        <ImageView
            android:layout_width="64dp"
            android:layout_height="64dp"
            android:background="@drawable/icon_last_log_off"
            android:layout_gravity="center"
            android:layout_column="2"
            android:layout_row="0"
            android:layout_marginBottom="8dp"/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Member Since"
            android:layout_gravity="center"
            android:layout_column="0"
            android:layout_row="1"/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Steam ID"
            android:layout_gravity="center"
            android:layout_column="1"
            android:layout_row="1"/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Last Log Off"
            android:layout_gravity="center"
            android:layout_column="2"
            android:layout_row="1"/>
        <TextView
            android:id="@+id/user_member_since"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="MAR 23, 2012"
            android:textSize="16dp"
            android:layout_gravity="center"
            android:layout_column="0"
            android:layout_row="2"
            android:layout_marginLeft="8dp"
            android:layout_marginRight="8dp"/>
        <TextView
            android:id="@+id/user_steam_id"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="100531310"
            android:textSize="16dp"
            android:layout_gravity="center"
            android:layout_column="1"
            android:layout_row="2"
            android:layout_marginLeft="8dp"
            android:layout_marginRight="8dp"/>
        <TextView
            android:id="@+id/user_last_log_off"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="JUL 19, 2016"
            android:textSize="16dp"
            android:layout_gravity="center"
            android:layout_column="2"
            android:layout_row="2"
            android:layout_marginLeft="8dp"
            android:layout_marginRight="8dp"/>
    </GridLayout>

    <com.github.mikephil.charting.charts.LineChart
        android:id="@+id/matches_chart"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"/>
</RelativeLayout>