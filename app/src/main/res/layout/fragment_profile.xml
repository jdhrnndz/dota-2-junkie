<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:gravity="center">
    <ImageView
        android:id="@+id/user_avatar"
        android:layout_width="100dip"
        android:layout_height="100dip"
        android:padding="6dp"
        android:background="@drawable/loading_gradient_red"
        android:layout_marginTop="32dip"
        android:layout_marginBottom="16dip"
        android:layout_centerHorizontal="true"
        android:layout_alignParentTop="true"
        android:contentDescription="@string/user_avatar_cd" />
    <!--<ProgressBar-->
        <!--android:id="@+id/user_avatar_progress_bar"-->
        <!--android:layout_width="100dip"-->
        <!--android:layout_height="100dip"-->
        <!--android:layout_marginTop="32dip"-->
        <!--android:layout_centerHorizontal="true"-->
        <!--android:layout_alignParentTop="true"/>-->
    <TextView
        android:id="@+id/user_persona_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textStyle="bold"
        android:textSize="32sp"
        android:layout_below="@id/user_avatar"
        android:layout_centerHorizontal="true"
        android:textColor="@color/primary_text"/>
    <TextView
        android:id="@+id/user_real_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/user_persona_name"
        android:layout_centerHorizontal="true"
        android:textColor="@color/secondary_text"/>
    <TextView
        android:id="@+id/user_country"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/user_real_name"
        android:layout_centerHorizontal="true"
        android:textColor="@color/secondary_text"/>
    <GridLayout
        android:id="@+id/user_info"
        android:layout_centerHorizontal="true"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/user_country"
        android:columnCount="3"
        android:rowCount="3"
        android:orientation="horizontal"
        android:layout_marginTop="32dp">
        <android.support.v7.widget.AppCompatButton
            android:id="@+id/symbol_member_since"
            android:layout_width="56dp"
            android:layout_height="56dp"
            android:layout_gravity="center"
            android:layout_column="0"
            android:layout_row="0"
            android:layout_marginBottom="8dp"
            android:text="@string/calendar"
            android:textSize="24dp"
            android:textColor="@color/primary"
            android:background="@drawable/icon_ring_border_red" />
        <android.support.v7.widget.AppCompatButton
            android:id="@+id/symbol_steam_id"
            android:layout_width="56dp"
            android:layout_height="56dp"
            android:layout_gravity="center"
            android:layout_column="1"
            android:layout_row="0"
            android:layout_marginBottom="8dp"
            android:text="@string/user"
            android:textSize="24dp"
            android:textColor="@color/primary"
            android:background="@drawable/icon_ring_border_red" />
        <android.support.v7.widget.AppCompatButton
            android:id="@+id/symbol_last_log_off"
            android:layout_width="56dp"
            android:layout_height="56dp"
            android:layout_gravity="center"
            android:layout_column="2"
            android:layout_row="0"
            android:layout_marginBottom="8dp"
            android:text="@string/sign_out"
            android:textSize="24dp"
            android:textColor="@color/primary"
            android:background="@drawable/icon_ring_border_red" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/profile_label_member_since"
            android:layout_gravity="center"
            android:layout_column="0"
            android:layout_row="1"
            android:textColor="@color/hint_text"/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/profile_label_steam_id"
            android:layout_gravity="center"
            android:layout_column="1"
            android:layout_row="1"
            android:textColor="@color/hint_text"/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/profile_label_last_log_off"
            android:layout_gravity="center"
            android:layout_column="2"
            android:layout_row="1"
            android:textColor="@color/hint_text"/>
        <TextView
            android:id="@+id/user_member_since"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="16sp"
            android:layout_gravity="center"
            android:layout_column="0"
            android:layout_row="2"
            android:layout_marginLeft="8dp"
            android:layout_marginRight="8dp"
            android:textColor="@color/primary_text"/>
        <TextView
            android:id="@+id/user_steam_id"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="16sp"
            android:layout_gravity="center"
            android:layout_column="1"
            android:layout_row="2"
            android:layout_marginLeft="8dp"
            android:layout_marginRight="8dp"
            android:textColor="@color/primary_text"/>
        <TextView
            android:id="@+id/user_last_log_off"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="16sp"
            android:layout_gravity="center"
            android:layout_column="2"
            android:layout_row="2"
            android:layout_marginLeft="8dp"
            android:layout_marginRight="8dp"
            android:textColor="@color/primary_text"/>
    </GridLayout>

    <ProgressBar
        android:id="@+id/matches_chart_progress_bar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="16dp"
        android:indeterminate="false"
        android:theme="@style/D2JProgressBar"
        style="@style/Widget.AppCompat.ProgressBar.Horizontal"
        android:layout_centerHorizontal="true"
        android:layout_below="@id/user_info"
        android:layout_alignParentBottom="true"/>

    <com.github.mikephil.charting.charts.LineChart
        android:id="@+id/matches_chart"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/user_info"
        android:layout_marginLeft="-16dp"
        android:layout_marginRight="-16dp"
        android:layout_marginBottom="-16dp"
        android:layout_alignParentBottom="true"/>
</RelativeLayout>