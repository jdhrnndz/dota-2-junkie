<?xml version="1.0" encoding="utf-8"?>
<android.support.design.widget.CoordinatorLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:id="@+id/main_layout"
    android:fitsSystemWindows="true"
    tools:context=".activity.MainActivity">

    <android.support.design.widget.AppBarLayout
        android:id="@+id/appbar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/gradient_red"
        android:theme="@style/ThemeOverlay.AppCompat.Dark.ActionBar"
        android:fitsSystemWindows="true">
        <android.support.design.widget.CollapsingToolbarLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:layout_scrollFlags="scroll|exitUntilCollapsed"
            android:fitsSystemWindows="true"
            app:expandedTitleMarginTop="16dp" >
            <android.support.v7.widget.Toolbar
                android:id="@+id/match_details_toolbar"
                android:layout_width="match_parent"
                android:layout_height="?attr/actionBarSize"
                android:theme="@style/ThemeOverlay.AppCompat.Dark.ActionBar"
                app:popupTheme="@style/ThemeOverlay.AppCompat.Light"
                app:layout_scrollFlags="scroll|enterAlways"/>
            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:padding="16dp"
                app:layout_scrollFlags="scroll|enterAlways|enterAlwaysCollapsed"
                app:layout_collapseMode="pin">
                <TextView
                    android:id="@+id/winner"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textColor="@color/md_white_1000"
                    android:textStyle="bold"
                    android:textSize="32sp"
                    android:layout_alignParentTop="true"/>
                <TextView
                    android:id="@+id/lobby"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:background="@color/md_white_1000"
                    android:textColor="@color/primary"
                    android:paddingTop="4dp"
                    android:paddingBottom="2dp"
                    android:paddingLeft="6dp"
                    android:paddingRight="6dp"
                    android:layout_margin="2dp"
                    android:layout_below="@id/winner"/>
                <TextView
                    android:id="@+id/game_mode"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:background="@color/md_white_1000"
                    android:textColor="@color/primary"
                    android:paddingTop="4dp"
                    android:paddingBottom="2dp"
                    android:paddingLeft="6dp"
                    android:paddingRight="6dp"
                    android:layout_margin="2dp"
                    android:layout_below="@id/lobby"/>
                <TextView
                    android:id="@+id/game_duration"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:background="@color/md_white_1000"
                    android:textColor="@color/primary"
                    android:paddingTop="4dp"
                    android:paddingBottom="2dp"
                    android:paddingLeft="6dp"
                    android:paddingRight="6dp"
                    android:layout_margin="2dp"
                    android:layout_below="@id/game_mode"/>
            </RelativeLayout>
        </android.support.design.widget.CollapsingToolbarLayout>
    </android.support.design.widget.AppBarLayout>

    <android.support.v4.widget.NestedScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        app:layout_behavior="@string/appbar_scrolling_view_behavior">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">
            <android.support.v7.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="8dp"
                android:layout_marginBottom="4dp"
                app:contentPadding="16dp"
                android:layout_marginLeft="@dimen/card_margin_horizontal"
                android:layout_marginRight="@dimen/card_margin_horizontal"
                app:cardCornerRadius="0dp">
                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical">
                    <TextView
                        android:id="@+id/title_team_scores"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Team Scores"
                        android:textColor="@color/hint_text"/>
                    <TextView
                        android:id="@+id/divider_match_score"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textSize="32sp"
                        android:text=":"
                        android:layout_centerHorizontal="true"
                        android:layout_below="@id/title_team_scores"
                        android:layout_marginTop="16dp"
                        android:textColor="@color/hint_text"/>
                    <TextView
                        android:id="@+id/radiant_score"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_toLeftOf="@id/divider_match_score"
                        android:layout_toStartOf="@id/divider_match_score"
                        android:layout_marginLeft="8dp"
                        android:layout_marginRight="8dp"
                        android:textSize="36sp"
                        android:layout_alignBaseline="@id/divider_match_score"
                        android:textColor="@color/primary_text"/>
                    <TextView
                        android:id="@+id/dire_score"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_toRightOf="@id/divider_match_score"
                        android:layout_toEndOf="@id/divider_match_score"
                        android:layout_marginLeft="8dp"
                        android:layout_marginRight="8dp"
                        android:textSize="36sp"
                        android:layout_alignBaseline="@id/divider_match_score"
                        android:textColor="@color/primary_text"/>
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Radiant"
                        android:layout_toStartOf="@id/radiant_score"
                        android:layout_toLeftOf="@id/radiant_score"
                        android:layout_alignBaseline="@id/divider_match_score"
                        android:textColor="@color/secondary_text"/>
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Dire"
                        android:layout_toEndOf="@id/dire_score"
                        android:layout_toRightOf="@id/dire_score"
                        android:layout_alignBaseline="@id/divider_match_score"
                        android:textColor="@color/secondary_text"/>
                </RelativeLayout>
            </android.support.v7.widget.CardView>

            <android.support.v7.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="4dp"
                android:layout_marginBottom="4dp"
                app:contentPaddingTop="16dp"
                android:layout_marginLeft="@dimen/card_margin_horizontal"
                android:layout_marginRight="@dimen/card_margin_horizontal"
                app:cardCornerRadius="0dp">
                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical">
                    <TextView
                        android:id="@+id/title_minimap"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Structure Status"
                        android:layout_marginLeft="16dp"
                        android:textColor="@color/hint_text"/>
                    <com.stratpoint.jdhrnndz.dota2junkie.customview.Minimap
                        android:id="@+id/minimap"
                        android:layout_width="match_parent"
                        android:layout_height="300dp"
                        android:layout_below="@id/title_minimap"
                        android:layout_marginTop="16dp"/>
                </RelativeLayout>
            </android.support.v7.widget.CardView>

            <android.support.v7.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="4dp"
                android:layout_marginBottom="4dp"
                app:contentPadding="16dp"
                android:layout_marginLeft="@dimen/card_margin_horizontal"
                android:layout_marginRight="@dimen/card_margin_horizontal"
                app:cardCornerRadius="0dp">
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical">
                    <TextView
                        android:id="@+id/title_the_radiant"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="The Radiant"
                        android:textColor="@color/hint_text"/>
                    <include
                        android:id="@+id/radiant_player_1"
                        layout="@layout/stub_hero_details" />
                    <include
                        android:id="@+id/radiant_player_2"
                        layout="@layout/stub_hero_details" />
                    <include
                        android:id="@+id/radiant_player_3"
                        layout="@layout/stub_hero_details" />
                    <include
                        android:id="@+id/radiant_player_4"
                        layout="@layout/stub_hero_details" />
                    <include
                        android:id="@+id/radiant_player_5"
                        layout="@layout/stub_hero_details" />
                </LinearLayout>
            </android.support.v7.widget.CardView>

            <android.support.v7.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="4dp"
                android:layout_marginBottom="4dp"
                app:contentPadding="16dp"
                android:layout_marginLeft="@dimen/card_margin_horizontal"
                android:layout_marginRight="@dimen/card_margin_horizontal"
                app:cardCornerRadius="0dp">
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical">
                    <TextView
                        android:id="@+id/title_the_dire"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="The Dire"
                        android:textColor="@color/hint_text"/>
                    <include
                        android:id="@+id/dire_player_1"
                        layout="@layout/stub_hero_details" />
                    <include
                        android:id="@+id/dire_player_2"
                        layout="@layout/stub_hero_details" />
                    <include
                        android:id="@+id/dire_player_3"
                        layout="@layout/stub_hero_details" />
                    <include
                        android:id="@+id/dire_player_4"
                        layout="@layout/stub_hero_details" />
                    <include
                        android:id="@+id/dire_player_5"
                        layout="@layout/stub_hero_details" />
                </LinearLayout>
            </android.support.v7.widget.CardView>
        </LinearLayout>
    </android.support.v4.widget.NestedScrollView>

</android.support.design.widget.CoordinatorLayout>